<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/txt_item_image"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dummyalbum"
            />

        <com.ingic.auditix.ui.views.AnyTextView
            android:id="@+id/txt_item_text"
            android:layout_width="@dimen/x80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x5"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:maxLines="1"
            android:text="Barbaras"
            android:textColor="@color/black"
            android:textSize="@dimen/x13"
            app:typeface="@string/font_normal"/>
        <Button
            android:id="@+id/btn_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:layout_gravity="start|bottom"
            android:layout_marginTop="@dimen/x5"
            android:background="@drawable/button_orange"
            android:paddingEnd="@dimen/x5"
            android:paddingStart="@dimen/x5"
            android:text="@string/unsubscribe"
            android:textSize="@dimen/x13"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>
</FrameLayout>