<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/roundshapelayout"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ingic.auditix.ui.views.AnyTextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/x10"
                android:alpha="0.7"
                android:gravity="center"
                android:text="@string/rate_now"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:typeface="@string/font_bold"/>

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/x15"
                android:src="@drawable/cross_orange"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.2"
            android:background="@color/app_gray"/>


        <com.ingic.auditix.ui.views.CustomRatingBar
            android:id="@+id/rbAddRating"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:isIndicator="true"
            android:visibility="visible"
            app:maxStars="5"
            app:starOff="@drawable/grey_star_big"
            app:starOn="@drawable/orange_star_big"
            app:starPadding="@dimen/x2"
            app:stars="2"
            />


        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"

            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:gravity="center"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x16"/>

    </LinearLayout>


</LinearLayout>