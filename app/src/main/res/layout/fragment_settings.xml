<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <FrameLayout
            android:id="@+id/btn_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/my_account"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_payment_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/payment_details"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/continues_play"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <Switch
                android:id="@+id/swt_continous_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:checked="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_new_episodes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/new_episode"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_played_episodes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/played_episodes"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_notifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/notification_settings"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/privacy_policy"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/app_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_term_conditions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.auditix.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/terms_condition"
                android:textColor="@color/app_font_gray"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="@string/font_normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow_orange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/x5"
                android:background="@color/app_gray"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>